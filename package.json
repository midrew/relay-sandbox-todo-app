{
  "name": "relay-sandbox-todo-app",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "concurrently --kill-others --names \"babel-node,relay\" \"yarn run server\" \"yarn run watch_relay\"",
    "server": "babel-node ./server.js",
    "build": "relay-compiler --src ./js/ --schema ./data/schema.graphql --artifactDirectory ./__generated__/relay",
    "flow-typed": "flow-typed install --flowVersion=0.118.0",
    "update-schema": "babel-node ./scripts/updateSchema.js",
    "lint": "eslint ./ --cache",
    "relay": "relay-compiler --src ./js --schema data/schema.graphql --artifactDirectory ./js/__generated__",
    "watch_relay": "npm-watch relay"
  },
  "dependencies": {
    "@babel/core": "^7.12.9",
    "@babel/node": "^7.12.6",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-flow": "^7.12.1",
    "@babel/preset-react": "^7.12.7",
    "@babel/runtime": "^7.12.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-relay": "^11.0.0-rc.0",
    "classnames": "2.2.6",
    "concurrently": "6.0.0",
    "eslint": "^7.14.0",
    "eslint-config-fbjs": "^3.1.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-relay": "^1.8.1",
    "express": "^4.16.4",
    "express-graphql": "^0.12.0",
    "flow-bin": "0.148.0",
    "flow-typed": "3.3.1",
    "graphql": "^15.4.0",
    "graphql-relay": "^0.6.0",
    "npm-watch": "0.9.0",
    "prettier": "^2.2.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-relay": "11.0.1",
    "relay-compiler": "11.0.1",
    "relay-compiler-experimental": "0.0.0-master-46d77385",
    "relay-runtime": "11.0.1",
    "todomvc-app-css": "^2.3.0",
    "todomvc-common": "^1.0.3",
    "webpack": "^4.41.5",
    "webpack-dev-server": "3.10.3",
    "whatwg-fetch": "3.5.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "jsxBracketSameLine": true
  },
  "watch": {
    "relay": {
      "patterns": ["js"],
      "extensions": "ts,tsx,js,jsx",
      "ignore": "js/__generated__/*",
      "verbose": true
    }
  }
}
